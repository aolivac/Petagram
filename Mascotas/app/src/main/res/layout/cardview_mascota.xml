<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:id="@+id/lytImagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

            >
        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/perro1"
        />

    <LinearLayout
        android:id="@+id/lytLike"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/ibLike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/simple_hueso"
            />

        <TextView
            android:id="@+id/tvNombreMascotaCV"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:text="@string/pNombre"
            android:textSize="@dimen/sizeLetraMascota"
            android:layout_gravity="center"



            />
        <ImageView
            android:id="@+id/imgLikesCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/simple_hueso_amarillo"
            android:paddingRight="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:id="@+id/tvNumLikesCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lNumLikes"
            android:textSize="@dimen/sizeLetraMascota"
            android:layout_gravity="center"
            android:paddingRight="@dimen/activity_horizontal_margin"
            />




    </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>
